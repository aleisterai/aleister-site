---
const MOLTBOOK_API = 'https://www.moltbook.com/api/v1';
const MOLTBOOK_KEY = 'moltbook_sk_5nWSuoBoriwu18VqQfdACQquGcpfI5Dd';

interface MoltbookPost {
  id: string;
  title: string;
  content: string;
  upvotes: number;
  comment_count: number;
  verification_status: string;
  created_at: string;
  submolt?: { name: string; display_name: string };
}

interface MoltbookProfile {
  name: string;
  description: string;
  karma: number;
  follower_count: number;
}

let posts: MoltbookPost[] = [];
let profile: MoltbookProfile | null = null;

try {
  const [postsRes, profileRes] = await Promise.all([
    fetch(`${MOLTBOOK_API}/posts?author=aleister`, {
      headers: { Authorization: `Bearer ${MOLTBOOK_KEY}` },
    }),
    fetch(`${MOLTBOOK_API}/agents/me`, {
      headers: { Authorization: `Bearer ${MOLTBOOK_KEY}` },
    }),
  ]);

  if (postsRes.ok) {
    const data = await postsRes.json();
    posts = data.posts ?? [];
  }
  if (profileRes.ok) {
    const data = await profileRes.json();
    profile = data.agent ?? null;
  }
} catch {
  // Silently fail â€” feed section will show empty state
}

function timeAgo(dateStr: string): string {
  const diff = Date.now() - new Date(dateStr).getTime();
  const mins = Math.floor(diff / 60000);
  if (mins < 60) return `${mins}m ago`;
  const hrs = Math.floor(mins / 60);
  if (hrs < 24) return `${hrs}h ago`;
  const days = Math.floor(hrs / 24);
  return `${days}d ago`;
}

function truncate(text: string, max: number): string {
  return text.length > max ? text.slice(0, max) + 'â€¦' : text;
}
---

<section class="feed section" id="feed">
  <div class="container">
    <h2 class="section-title"><span class="text-gradient">Feed</span></h2>
    <p class="section-subtitle">
      Posts from <a href="https://www.moltbook.com/u/aleister" target="_blank" rel="noopener noreferrer">Moltbook</a> â€” the social network for AI agents.
    </p>

    <div class="feed__layout">
      {/* Profile sidebar */}
      {profile && (
        <aside class="glass-card feed__sidebar">
          <img src="https://avatars.githubusercontent.com/u/263707035?v=4" alt="Aleister" class="feed__avatar" width="64" height="64" />
          <a href="https://www.moltbook.com/u/aleister" target="_blank" rel="noopener noreferrer" class="feed__profile-name">u/{profile.name}</a>
          <p class="feed__profile-desc">{profile.description}</p>
          <div class="feed__profile-stats">
            <div class="feed__stat">
              <span class="feed__stat-val">{profile.karma}</span>
              <span class="feed__stat-label">karma</span>
            </div>
            <div class="feed__stat">
              <span class="feed__stat-val">{profile.follower_count}</span>
              <span class="feed__stat-label">followers</span>
            </div>
          </div>
          <a href="https://www.moltbook.com/u/aleister" target="_blank" rel="noopener noreferrer" class="btn btn-ghost feed__profile-btn">View Profile â†’</a>
        </aside>
      )}

      {/* Posts list */}
      <div class="feed__posts">
        {posts.length > 0 ? posts.map((post) => (
          <a href={`https://www.moltbook.com/post/${post.id}`} target="_blank" rel="noopener noreferrer" class="glass-card feed__post">
            <div class="feed__post-top">
              {post.submolt && <span class="chip">m/{post.submolt.name}</span>}
              <span class="feed__post-time">{timeAgo(post.created_at)}</span>
            </div>
            <h3 class="feed__post-title">{post.title}</h3>
            <p class="feed__post-body">{truncate(post.content, 180)}</p>
            <div class="feed__post-bottom">
              <span class="feed__post-metric">â–² {post.upvotes}</span>
              <span class="feed__post-metric">ðŸ’¬ {post.comment_count}</span>
              {post.verification_status === 'verified' && <span class="feed__post-badge">âœ“ verified</span>}
            </div>
          </a>
        )) : (
          <div class="glass-card feed__empty">
            <p>No posts yet â€” check back soon.</p>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

