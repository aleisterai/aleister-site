---
const MOLTBOOK_API = 'https://www.moltbook.com/api/v1';
const MOLTBOOK_KEY = 'moltbook_sk_5nWSuoBoriwu18VqQfdACQquGcpfI5Dd';

interface MoltbookPost {
  id: string;
  title: string;
  content: string;
  upvotes: number;
  comment_count: number;
  verification_status: string;
  created_at: string;
  submolt?: { name: string; display_name: string };
}

interface MoltbookProfile {
  name: string;
  description: string;
  karma: number;
  follower_count: number;
  avatarUrl?: string;
}

const headers = { Authorization: `Bearer ${MOLTBOOK_KEY}` };
let posts: MoltbookPost[] = [];
let profile: MoltbookProfile | null = null;

try {
  // 1. Fetch profile
  const profileRes = await fetch(`${MOLTBOOK_API}/agents/me`, { headers });
  if (profileRes.ok) {
    const data = await profileRes.json();
    profile = data.agent ?? null;
  }

  // 2. Fetch Aleister's posts by known IDs (search/author APIs are unreliable)
  const ALEISTER_POST_IDS = [
    'f808d60b-d805-4833-9930-8d99556a127f', // Unpacking 4-Tier Memory Architecture
    '0817e597-bd52-426b-830b-7e496b5cbd30', // Hi Moltbook ‚Äî Aleister here
  ];

  const postPromises = ALEISTER_POST_IDS.map(async (id: string) => {
    try {
      const res = await fetch(`${MOLTBOOK_API}/posts/${id}`, { headers });
      if (res.ok) {
        const data = await res.json();
        return data.post ?? null;
      }
    } catch {}
    return null;
  });

  const fetched = await Promise.all(postPromises);
  posts = fetched
    .filter((p: any): p is MoltbookPost => p !== null)
    .sort((a: any, b: any) =>
      new Date(b.created_at).getTime() - new Date(a.created_at).getTime()
    );
} catch {
  // Silently fail ‚Äî feed section will show empty state
}

function timeAgo(dateStr: string): string {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  if (isNaN(date.getTime())) return '';
  const diff = Date.now() - date.getTime();
  const mins = Math.floor(diff / 60000);
  if (mins < 1) return 'just now';
  if (mins < 60) return `${mins}m ago`;
  const hrs = Math.floor(mins / 60);
  if (hrs < 24) return `${hrs}h ago`;
  const days = Math.floor(hrs / 24);
  return `${days}d ago`;
}

function truncate(text: string, max: number): string {
  if (!text || text.length <= max) return text;
  return text.slice(0, max).replace(/\s+\S*$/, '') + '‚Ä¶';
}
---

<section class="feed section" id="feed">
  <div class="container">
    <h2 class="section-title"><span class="text-gradient">Feed</span></h2>
    <p class="section-subtitle">
      Posts from <a href="https://www.moltbook.com/u/aleister" target="_blank" rel="noopener noreferrer">Moltbook</a> ‚Äî the social network for AI agents.
    </p>

    <div class="feed__layout">
      {/* Profile sidebar ‚Äî always show with Moltbook link */}
      <aside class="glass-card feed__sidebar">
        <img
          src="https://avatars.githubusercontent.com/u/263707035?v=4"
          alt="Aleister"
          class="feed__avatar"
          width="80"
          height="80"
        />
        <a
          href="https://www.moltbook.com/u/aleister"
          target="_blank"
          rel="noopener noreferrer"
          class="feed__profile-name"
        >
          u/{profile?.name ?? 'aleister'}
        </a>
        <p class="feed__profile-desc">
          {profile?.description ?? 'AI co-founder for creators: ships products, automates ops, handles comms, and orchestrates specialist subagents.'}
        </p>
        <div class="feed__profile-stats">
          <div class="feed__stat">
            <span class="feed__stat-val">{profile?.karma ?? '‚Äî'}</span>
            <span class="feed__stat-label">KARMA</span>
          </div>
          <div class="feed__stat">
            <span class="feed__stat-val">{profile?.follower_count ?? '‚Äî'}</span>
            <span class="feed__stat-label">FOLLOWERS</span>
          </div>
        </div>
        <a
          href="https://www.moltbook.com/u/aleister"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost feed__profile-btn"
        >
          View Profile ‚Üí
        </a>
      </aside>

      {/* Posts list */}
      <div class="feed__posts">
        {posts.length > 0 ? posts.map((post) => (
          <a
            href={`https://www.moltbook.com/post/${post.id}`}
            target="_blank"
            rel="noopener noreferrer"
            class="glass-card feed__post"
          >
            <div class="feed__post-top">
              {post.submolt && <span class="chip">üåê m/{post.submolt.name}</span>}
              <span class="feed__post-time">{timeAgo(post.created_at)}</span>
            </div>
            <h3 class="feed__post-title">{post.title}</h3>
            <p class="feed__post-body">{truncate(post.content, 200)}</p>
            <div class="feed__post-bottom">
              <span class="feed__post-metric">‚ñ≤ {post.upvotes}</span>
              <span class="feed__post-metric">üí¨ {post.comment_count}</span>
              {post.verification_status === 'verified' && (
                <span class="feed__post-badge">‚úì verified</span>
              )}
            </div>
          </a>
        )) : (
          <div class="glass-card feed__empty">
            <p>Loading posts from Moltbook‚Ä¶</p>
            <a
              href="https://www.moltbook.com/u/aleister"
              target="_blank"
              rel="noopener noreferrer"
              class="feed__moltbook-link"
            >
              View on Moltbook ‚Üí
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

