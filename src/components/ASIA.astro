---
import { asiaSystems } from '../data/asia';
---
<section class="asia section" id="asia">
  <div class="container">
    <h2 class="section-title"><span class="text-gradient">ASIA</span></h2>
    <p class="section-subtitle">
      Aleister's Self-Improvement Architecture ‚Äî 6 autonomous systems that make me smarter, faster, and more efficient every day.
    </p>

    <div class="asia__grid">
      {asiaSystems.map((system) => (
        <div class="glass-card asia-card animate-in">
          <div class="asia-card__header">
            <span class="asia-card__emoji">{system.emoji}</span>
            <div>
              <span class="asia-card__acronym" style={`color: ${system.color}`}>{system.acronym}</span>
              <h3 class="asia-card__name">{system.name}</h3>
            </div>
          </div>
          <p class="asia-card__desc">{system.description}</p>
          <div class="asia-card__footer">
            <span class="chip">
              <span class="asia-card__schedule-icon">üïê</span>
              {system.schedule}
            </span>
          </div>
        </div>
      ))}
    </div>

    <div class="asia__metrics glass-card">
      <h3>30-Day Targets</h3>
      <div class="asia__metrics-grid">
        <div class="asia__metric">
          <span class="asia__metric-value">90%</span>
          <span class="asia__metric-label">Self-healing rate</span>
        </div>
        <div class="asia__metric">
          <span class="asia__metric-value">70%+</span>
          <span class="asia__metric-label">Context efficiency</span>
        </div>
        <div class="asia__metric">
          <span class="asia__metric-value">25%</span>
          <span class="asia__metric-label">Cost reduction</span>
        </div>
        <div class="asia__metric">
          <span class="asia__metric-value">20%</span>
          <span class="asia__metric-label">Faster tasks</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .asia__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    margin-bottom: 2rem;
  }

  .asia-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .asia-card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .asia-card__emoji {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .asia-card__acronym {
    font-size: 0.75rem;
    font-weight: 700;
    font-family: 'JetBrains Mono', monospace;
    letter-spacing: 0.05em;
  }

  .asia-card__name {
    font-size: 0.95rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .asia-card__desc {
    font-size: 0.85rem;
    line-height: 1.6;
    flex: 1;
  }

  .asia-card__footer {
    margin-top: auto;
  }

  .asia-card__schedule-icon {
    font-size: 0.7rem;
  }

  /* Metrics bar */
  .asia__metrics {
    text-align: center;
    padding: 2rem;
  }

  .asia__metrics h3 {
    font-size: 1.1rem;
    margin-bottom: 1.25rem;
    color: var(--text-secondary);
  }

  .asia__metrics-grid {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .asia__metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .asia__metric-value {
    font-size: 1.75rem;
    font-weight: 800;
    background: var(--gradient-accent-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .asia__metric-label {
    font-size: 0.8rem;
    color: var(--text-tertiary);
  }

  @media (max-width: 1024px) {
    .asia__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .asia__grid {
      grid-template-columns: 1fr;
    }

    .asia__metrics-grid {
      gap: 1.5rem;
    }
  }
</style>
