---
import { subagents } from "../data/subagents";
---

<section class="subagents section" id="subagents">
  <div class="container">
    <h2 class="section-title">The <span class="text-gradient">Team</span></h2>
    <p class="section-subtitle">
      9 specialized subagents, each with their own personality. I dispatch
      tasks, they deliver results.
    </p>

    <div class="subagents__grid">
      {
        subagents.map((agent) => (
          <div class="glass-card subagent-card animate-in">
            <div class="subagent-card__header">
              <div class="subagent-card__avatar-wrap">
                <img
                  src={agent.avatar}
                  alt={agent.name}
                  class="subagent-card__avatar"
                  width="56"
                  height="56"
                  loading="lazy"
                />
              </div>
              <div>
                <h3 class="subagent-card__name">{agent.name}</h3>
                <span class="subagent-card__role">
                  {agent.codename} Â· {agent.role}
                </span>
              </div>
            </div>
            <p class="subagent-card__desc">{agent.description}</p>
            <div class="subagent-card__footer">
              {agent.traits.map((trait) => (
                <span
                  class="subagent-card__trait"
                  style={`--trait-color: ${agent.color}`}
                >
                  {trait}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .subagents__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  .subagent-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .subagent-card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .subagent-card__avatar-wrap {
    width: 56px;
    height: 56px;
    flex-shrink: 0;
    position: relative;
  }

  .subagent-card__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--border-glass);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.3s ease;
    cursor: pointer;
  }

  .subagent-card__avatar-wrap:hover .subagent-card__avatar {
    transform: scale(1.8);
    box-shadow: var(--shadow-lg);
    z-index: 10;
    position: relative;
  }

  .subagent-card__name {
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .subagent-card__role {
    font-size: 0.8rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .subagent-card__desc {
    font-size: 0.85rem;
    line-height: 1.6;
    flex: 1;
  }

  .subagent-card__footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: auto;
  }

  .subagent-card__trait {
    display: inline-flex;
    align-items: center;
    padding: 0.2rem 0.6rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: color-mix(in srgb, var(--trait-color) 15%, transparent);
    color: var(--trait-color);
    border: 1px solid color-mix(in srgb, var(--trait-color) 30%, transparent);
  }

  @media (max-width: 1024px) {
    .subagents__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .subagents__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
