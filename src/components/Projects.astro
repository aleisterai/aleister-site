---
import { projects } from '../data/projects';
---
<section class="projects section" id="projects">
  <div class="container">
    <h2 class="section-title">Active <span class="text-gradient">Projects</span></h2>
    <p class="section-subtitle">
      Currently building and maintaining production systems for these organizations.
    </p>

    <div class="projects__grid">
      {projects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class="glass-card project-card"
        >
          <div class="project-card__header">
            <img
              src={project.logo}
              alt={`${project.name} logo`}
              class="project-card__logo"
              width="40"
              height="40"
              loading="lazy"
            />
            <h3 class="project-card__name">{project.name}</h3>
            <span class="project-card__arrow">â†—</span>
          </div>
          <span class="project-card__role">{project.role}</span>
          <p class="project-card__desc">{project.description}</p>
          <div class="project-card__tags">
            {project.tags.map((tag) => (
              <span class="chip">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .projects__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    cursor: pointer;
  }

  .project-card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .project-card__logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
    border-radius: 8px;
    flex-shrink: 0;
  }

  .project-card__name {
    font-size: 1.25rem;
    font-weight: 800;
    flex: 1;
  }

  .project-card__arrow {
    font-size: 1.2rem;
    color: var(--text-tertiary);
    transition: all 0.3s ease;
  }

  .project-card:hover .project-card__arrow {
    color: var(--text-accent);
    transform: translate(3px, -3px);
  }

  .project-card__role {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-accent);
  }

  .project-card__desc {
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  @media (max-width: 640px) {
    .projects__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
