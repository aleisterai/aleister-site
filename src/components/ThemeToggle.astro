<button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme" title="Toggle theme">
  <!-- Light: sun -->
  <span class="theme-toggle__icon theme-toggle__icon--light">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="4"/>
      <line x1="12" y1="2" x2="12" y2="5"/>
      <line x1="12" y1="19" x2="12" y2="22"/>
      <line x1="4.22" y1="4.22" x2="6.34" y2="6.34"/>
      <line x1="17.66" y1="17.66" x2="19.78" y2="19.78"/>
      <line x1="2" y1="12" x2="5" y2="12"/>
      <line x1="19" y1="12" x2="22" y2="12"/>
      <line x1="4.22" y1="19.78" x2="6.34" y2="17.66"/>
      <line x1="17.66" y1="6.34" x2="19.78" y2="4.22"/>
    </svg>
  </span>
  <!-- System: half-filled circle -->
  <span class="theme-toggle__icon theme-toggle__icon--system">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2">
      <path d="M12 2a10 10 0 0 1 0 20V2z" fill="currentColor" stroke="none"/>
      <circle cx="12" cy="12" r="10"/>
    </svg>
  </span>
  <!-- Dark: crescent moon -->
  <span class="theme-toggle__icon theme-toggle__icon--dark">
    <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" fill="currentColor" stroke="currentColor"/>
    </svg>
  </span>
  <span class="theme-toggle__indicator" id="theme-indicator"></span>
</button>

<style>
  .theme-toggle {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0;
    padding: 4px;
    border-radius: 12px;
    background: var(--toggle-bg);
    border: 1px solid var(--border-subtle);
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .theme-toggle:hover {
    border-color: var(--border-accent);
  }

  .theme-toggle__icon {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 28px;
    border-radius: 8px;
    transition: all 0.3s ease;
    opacity: 0.35;
    color: var(--text-secondary);
  }

  .theme-toggle__icon.active {
    opacity: 1;
    color: var(--text-accent);
  }

  .theme-toggle__indicator {
    position: absolute;
    width: 32px;
    height: 28px;
    border-radius: 8px;
    background: var(--toggle-active);
    border: 1px solid var(--border-accent);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    left: 4px;
  }

  [data-theme="light"] .theme-toggle__indicator { transform: translateX(0); }
  [data-theme="dark"] .theme-toggle__indicator { transform: translateX(64px); }
</style>

<script is:inline>
  (function() {
    const modes = ['light', 'system', 'dark'];
    const toggle = document.getElementById('theme-toggle');
    const icons = toggle.querySelectorAll('.theme-toggle__icon');
    const indicator = document.getElementById('theme-indicator');

    function getStored() {
      return localStorage.getItem('theme') || 'system';
    }

    function resolve(mode) {
      if (mode === 'system') {
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }
      return mode;
    }

    function setIndicator(mode) {
      const idx = modes.indexOf(mode);
      indicator.style.transform = `translateX(${idx * 32}px)`;
      icons.forEach((icon, i) => {
        icon.classList.toggle('active', i === idx);
      });
    }

    function apply(mode) {
      const resolved = resolve(mode);
      document.documentElement.setAttribute('data-theme', resolved);
      localStorage.setItem('theme', mode);
      setIndicator(mode);
    }

    const current = getStored();
    apply(current);

    toggle.addEventListener('click', () => {
      const current = getStored();
      const idx = modes.indexOf(current);
      const next = modes[(idx + 1) % modes.length];
      apply(next);
    });

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      if (getStored() === 'system') apply('system');
    });
  })();
</script>
