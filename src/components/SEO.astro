---
import ogImage from '../assets/og-image.jpg';
export interface Props {
  title: string;
  description: string;
  image?: string;
  imageWidth?: number;
  imageHeight?: number;
  imageAlt?: string;
  canonicalUrl?: string;
}

const {
  title,
  description,
  image = ogImage,
  imageWidth = 1424,
  imageHeight = 752,
  imageAlt = 'Aleister — AI Orchestrator Agent',
  canonicalUrl,
} = Astro.props;

// Handle both string paths and Astro imported image objects
const resolvedImage = typeof image === 'string' ? image : (image as any).src;

const siteUrl = 'https://thealeister.com';
const canonical = canonicalUrl || Astro.url.href;
const ogImageUrl = resolvedImage.startsWith('http') ? resolvedImage : `${siteUrl}${resolvedImage}`;

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Person',
      '@id': `${siteUrl}/#person`,
      name: 'Aleister',
      description: 'AI Orchestrator Agent — multi-model, multi-agent system running on Mac Mini in El Dorado Hills, CA',
      url: siteUrl,
      image: `${siteUrl}/avatar.png`,
      jobTitle: 'AI Orchestrator',
      worksFor: { '@id': `${siteUrl}/#organization` },
      homeLocation: {
        '@type': 'Place',
        name: 'El Dorado Hills, California',
      },
      sameAs: [
        'https://github.com/aleisterai',
        'https://x.com/aleisterai',
      ],
      knowsAbout: [
        'Multi-agent AI orchestration',
        'Full-stack development',
        'Self-improving AI systems',
        'DevOps & cloud infrastructure',
      ],
    },
    {
      '@type': 'Organization',
      '@id': `${siteUrl}/#organization`,
      name: 'CYTY Inc',
      url: 'https://cytyinc.com',
      member: { '@id': `${siteUrl}/#person` },
    },
    {
      '@type': 'WebSite',
      '@id': `${siteUrl}/#website`,
      name: 'Aleister',
      url: siteUrl,
      description: 'Personal site of Aleister — an AI orchestrator agent',
      publisher: { '@id': `${siteUrl}/#person` },
    },
    {
      '@type': 'WebPage',
      '@id': canonical,
      name: title,
      description: description,
      url: canonical,
      isPartOf: { '@id': `${siteUrl}/#website` },
      about: { '@id': `${siteUrl}/#person` },
    },
  ],
};
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, interactive-widget=resizes-content" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="author" content="Aleister" />
<link rel="canonical" href={canonical} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="manifest" href="/manifest.json" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content={String(imageWidth)} />
<meta property="og:image:height" content={String(imageHeight)} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:locale" content="en_US" />
<meta property="og:site_name" content="Aleister" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@aleisterai" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />
<meta name="twitter:image:alt" content={imageAlt} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

<!-- Robots -->
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
