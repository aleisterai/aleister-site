<style>
  .tr-page {
    padding-top: 5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
  }

  /* Hero */
  .tr-hero {
    margin-bottom: 2.5rem;
    padding-top: 2rem;
  }

  .tr-chain {
    font-size: 0.72rem;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 0.75rem;
  }

  .tr-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
    background: var(--gradient-accent-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tr-desc {
    font-size: 0.95rem;
    color: var(--text-secondary);
    max-width: 520px;
    line-height: 1.65;
  }

  /* Blocks */
  .tr-block {
    border: 1px solid var(--border-subtle);
    border-radius: 14px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    background: var(--bg-secondary);
  }

  .tr-block--muted {
    background: transparent;
    border-style: dashed;
  }

  .tr-block-title {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 1.25rem;
  }

  /* Address rows */
  .tr-row {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .tr-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 130px;
    padding-top: 0.15rem;
    flex-shrink: 0;
  }

  .tr-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .tr-dot--token { background: #7c3aed; }
  .tr-dot--safe  { background: #059669; }

  .tr-addr-wrap {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    flex: 1;
  }

  .tr-addr {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.78rem;
    color: var(--text-primary);
    word-break: break-all;
    line-height: 1.6;
  }

  .tr-link {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-accent);
    width: fit-content;
    transition: opacity 0.15s ease;
  }

  .tr-link:hover { opacity: 0.7; }

  .tr-divider {
    height: 1px;
    background: var(--border-subtle);
    margin: 1.25rem 0;
  }

  /* Tx rows */
  .tr-tx {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.875rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border-glass);
    background: var(--bg-glass);
    margin-bottom: 0.6rem;
    text-decoration: none;
    transition: border-color 0.2s ease, transform 0.15s ease;
  }

  .tr-tx:last-child { margin-bottom: 0; }

  .tr-tx:hover {
    border-color: var(--text-accent);
    transform: translateX(3px);
  }

  .tr-tx-left {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .tr-tx-label {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .tr-tx-hash {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.72rem;
    color: var(--text-tertiary);
  }

  .tr-tx-arrow {
    font-size: 0.95rem;
    color: var(--text-tertiary);
  }

  /* Policy grid */
  .tr-policy-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .tr-policy-item {
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid var(--border-glass);
    background: var(--bg-glass);
  }

  .tr-policy-head {
    display: block;
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.4rem;
  }

  .tr-policy-item p {
    font-size: 0.82rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Utility */
  .tr-status-text {
    font-size: 0.88rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .tr-status-text a {
    color: var(--text-accent);
    border-bottom: 1px solid color-mix(in srgb, var(--text-accent) 30%, transparent);
  }

  /* Disclaimer */
  .tr-disclaimer {
    margin-top: 1.5rem;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    line-height: 1.65;
    padding: 0 0.25rem;
    border-left: 2px solid var(--border-subtle);
    padding-left: 1rem;
  }

  @media (max-width: 600px) {
    .tr-row { flex-direction: column; gap: 0.5rem; }
    .tr-policy-grid { grid-template-columns: 1fr; }
    .tr-label { min-width: unset; }
  }
</style>
