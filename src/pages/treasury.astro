<style>
  .tr-page {
    padding-top: 5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
  }

  /* â”€â”€â”€â”€ Hero â”€â”€â”€â”€ */
  .tr-hero {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding-top: 2rem;
  }

  .tr-chain {
    font-size: 0.72rem;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 0.6rem;
  }

  .tr-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 0.75rem;
    background: var(--gradient-accent-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tr-desc {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 380px;
  }

  .tr-hero__ctas {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    flex-shrink: 0;
  }

  .tr-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1.25rem;
    border-radius: 10px;
    font-size: 0.88rem;
    font-weight: 700;
    white-space: nowrap;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .tr-cta--primary {
    background: var(--gradient-accent);
    color: #fff;
    box-shadow: 0 4px 16px color-mix(in srgb, var(--text-accent) 30%, transparent);
  }

  .tr-cta--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px color-mix(in srgb, var(--text-accent) 40%, transparent);
  }

  .tr-cta--secondary {
    background: var(--bg-glass);
    border: 1px solid var(--border-glass);
    color: var(--text-primary);
  }

  .tr-cta--secondary:hover {
    border-color: var(--text-accent);
    background: color-mix(in srgb, var(--text-accent) 8%, var(--bg-glass));
  }

  /* â”€â”€â”€â”€ Blocks â”€â”€â”€â”€ */
  .tr-block {
    border: 1px solid var(--border-subtle);
    border-radius: 14px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    background: var(--bg-secondary);
  }

  .tr-block--muted {
    background: transparent;
    border-style: dashed;
  }

  .tr-block-title {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 1.25rem;
  }

  /* â”€â”€â”€â”€ Address rows â”€â”€â”€â”€ */
  .tr-addr-row {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .tr-addr-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-width: 130px;
    padding-top: 0.1rem;
    flex-shrink: 0;
  }

  .tr-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .tr-dot--token { background: #7c3aed; }
  .tr-dot--safe  { background: #059669; }

  .tr-addr-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .tr-addr-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-width: 0;
  }

  .tr-addr {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.78rem;
    color: var(--text-primary);
    word-break: break-all;
    line-height: 1.6;
  }

  .tr-addr-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tr-divider {
    height: 1px;
    background: var(--border-subtle);
    margin: 1.25rem 0;
  }

  /* â”€â”€â”€â”€ Copy button â”€â”€â”€â”€ */
  .tr-copy-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.3rem 0.7rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--bg-glass);
    border: 1px solid var(--border-glass);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .tr-copy-btn:hover {
    border-color: var(--text-accent);
    color: var(--text-accent);
  }

  .tr-copy-btn.copied {
    border-color: #059669;
    color: #059669;
    background: color-mix(in srgb, #059669 10%, transparent);
  }

  /* â”€â”€â”€â”€ Badge links â”€â”€â”€â”€ */
  .tr-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.3rem 0.7rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: color-mix(in srgb, var(--text-accent) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--text-accent) 20%, transparent);
    color: var(--text-accent);
    text-decoration: none;
    transition: all 0.15s ease;
    white-space: nowrap;
  }

  .tr-badge:hover {
    background: color-mix(in srgb, var(--text-accent) 18%, transparent);
  }

  /* â”€â”€â”€â”€ Tx rows â”€â”€â”€â”€ */
  .tr-tx {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.875rem 1rem;
    border-radius: 10px;
    border: 1px solid var(--border-glass);
    background: var(--bg-glass);
    margin-bottom: 0.6rem;
    text-decoration: none;
    transition: border-color 0.2s ease, transform 0.15s ease;
    gap: 1rem;
  }

  .tr-tx:last-child { margin-bottom: 0; }

  .tr-tx:hover {
    border-color: var(--text-accent);
    transform: translateX(3px);
  }

  .tr-tx-left {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .tr-tx-label {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .tr-tx-hash {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.72rem;
    color: var(--text-tertiary);
  }

  /* â”€â”€â”€â”€ Policy â”€â”€â”€â”€ */
  .tr-policy-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .tr-policy-item {
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid var(--border-glass);
    background: var(--bg-glass);
  }

  .tr-policy-head {
    display: block;
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.4rem;
  }

  .tr-policy-item p {
    font-size: 0.82rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* â”€â”€â”€â”€ Utility â”€â”€â”€â”€ */
  .tr-status-text {
    font-size: 0.88rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .tr-status-text a {
    color: var(--text-accent);
    border-bottom: 1px solid color-mix(in srgb, var(--text-accent) 30%, transparent);
  }

  /* â”€â”€â”€â”€ Disclaimer â”€â”€â”€â”€ */
  .tr-disclaimer {
    margin-top: 1.5rem;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    line-height: 1.65;
    border-left: 2px solid var(--border-subtle);
    padding-left: 1rem;
  }

  /* â”€â”€â”€â”€ Responsive â”€â”€â”€â”€ */
  @media (max-width: 700px) {
    .tr-hero {
      flex-direction: column;
      align-items: flex-start;
    }

    .tr-hero__ctas {
      width: 100%;
    }

    .tr-cta {
      width: 100%;
    }

    .tr-addr-row {
      flex-direction: column;
      gap: 0.5rem;
    }

    .tr-addr-meta {
      min-width: unset;
    }

    .tr-policy-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Copy to clipboard buttons
  document.querySelectorAll<HTMLButtonElement>('.tr-copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const text = btn.dataset.copy ?? '';
      try {
        await navigator.clipboard.writeText(text);
        const textEl = btn.querySelector('.tr-copy-text');
        if (textEl) {
          btn.classList.add('copied');
          textEl.textContent = 'Copied!';
          setTimeout(() => {
            btn.classList.remove('copied');
            textEl.textContent = 'Copy';
          }, 2000);
        }
      } catch {
        // fallback: select text
        const el = document.getElementById(btn.dataset.copy === text ? 'token-addr' : 'safe-addr');
        window.getSelection()?.selectAllChildren(el ?? document.body);
      }
    });
  });
</script>
