<style>
  .treasury {
    padding-top: 3rem;
    padding-bottom: 5rem;
  }

  .treasury__header {
    text-align: center;
    max-width: 680px;
    margin: 0 auto 3rem;
  }

  .treasury__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.9rem;
    border-radius: 99px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background: color-mix(in srgb, var(--text-accent) 12%, transparent);
    color: var(--text-accent);
    border: 1px solid color-mix(in srgb, var(--text-accent) 25%, transparent);
    margin-bottom: 1rem;
  }

  .treasury__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    margin-bottom: 1rem;
    background: var(--gradient-accent-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .treasury__subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  /* Contract cards */
  .treasury__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
    margin-bottom: 2.5rem;
  }

  .treasury__card {
    padding: 1.75rem;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .treasury__card-label {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
  }

  .treasury__card-icon {
    font-size: 1.75rem;
    margin: 0.25rem 0;
  }

  .treasury__card-title {
    font-size: 1.1rem;
    font-weight: 800;
    margin-bottom: 0.25rem;
  }

  .treasury__address-wrap {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .treasury__address {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.72rem;
    color: var(--text-accent);
    background: color-mix(in srgb, var(--text-accent) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--text-accent) 15%, transparent);
    border-radius: 8px;
    padding: 0.6rem 0.8rem;
    word-break: break-all;
    line-height: 1.5;
  }

  .treasury__verify-btn {
    display: inline-flex;
    align-items: center;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-accent);
    transition: opacity 0.2s ease;
    width: fit-content;
  }

  .treasury__verify-btn:hover {
    opacity: 0.7;
  }

  /* Sections */
  .treasury__section {
    margin-bottom: 2.5rem;
  }

  .treasury__section-title {
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  /* Receipts */
  .treasury__receipts {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .treasury__receipt {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .treasury__receipt:hover {
    border-color: var(--text-accent);
    transform: translateX(4px);
  }

  .treasury__receipt-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .treasury__receipt-info {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .treasury__receipt-label {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .treasury__receipt-hash {
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-tertiary);
  }

  .treasury__receipt-arrow {
    font-size: 1rem;
    color: var(--text-tertiary);
  }

  /* Policy */
  .treasury__policy {
    border-radius: 16px;
    padding: 1.75rem;
  }

  .treasury__policy-items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .treasury__policy-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .treasury__policy-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .treasury__policy-item strong {
    display: block;
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .treasury__policy-item p {
    font-size: 0.88rem;
    color: var(--text-secondary);
    line-height: 1.65;
  }

  /* Utility */
  .treasury__utility {
    border-radius: 16px;
    padding: 1.75rem;
  }

  .treasury__utility p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 0.75rem;
  }

  .treasury__utility p:last-child {
    margin-bottom: 0;
  }

  .treasury__utility a {
    color: var(--text-accent);
    border-bottom: 1px solid color-mix(in srgb, var(--text-accent) 30%, transparent);
  }

  /* Disclaimer */
  .treasury__disclaimer {
    margin-top: 2.5rem;
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border-subtle);
    background: var(--bg-secondary);
  }

  .treasury__disclaimer p {
    font-size: 0.8rem;
    color: var(--text-tertiary);
    line-height: 1.65;
  }

  .treasury__disclaimer strong {
    color: var(--text-secondary);
  }

  @media (max-width: 680px) {
    .treasury__grid {
      grid-template-columns: 1fr;
    }

    .treasury__address {
      font-size: 0.65rem;
    }
  }
</style>
