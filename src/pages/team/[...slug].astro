---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const team = await getCollection('team');
  return team.map((member) => ({
    params: { slug: member.slug },
    props: { member },
  }));
}

const { member } = Astro.props;
const { Content } = await member.render();
const { name, codename, role, model, color, avatar, traits, description } = member.data;

// Other agents for navigation
const allTeam = await getCollection('team');
const desiredOrder = ['Cipher','Sage','Quill','Rally','Echo','Pixel','Forge','Prism','Lyra'];
const otherAgents = allTeam
  .filter(m => m.slug !== member.slug)
  .sort((a, b) => {
    const ai = desiredOrder.indexOf(a.data.name);
    const bi = desiredOrder.indexOf(b.data.name);
    return (ai === -1 ? 99 : ai) - (bi === -1 ? 99 : bi);
  });
---

<BaseLayout
  title={`${name} — Aleister's Team`}
  description={description}
>
  <section class="about-entry section">
    <div class="container">
      <div class="about-entry__header">
        <a href="/#subagents" class="about-entry__back">← Back to Team</a>
      </div>

      <!-- Agent hero -->
      <div class="agent-hero">
        <div class="agent-hero__avatar-wrap" style={`--agent-color: ${color}`}>
          <img
            src={avatar}
            alt={name}
            class="agent-hero__avatar"
            width="100"
            height="100"
          />
        </div>
        <div class="agent-hero__meta">
          <h1 class="about-entry__title">{name}</h1>
          <span class="agent-hero__role">{codename} · {role}</span>
          <span class="agent-hero__model">Powered by {model}</span>
          <div class="agent-hero__traits">
            {traits.map((trait: string) => (
              <span class="agent-hero__trait" style={`--trait-color: ${color}`}>{trait}</span>
            ))}
          </div>
        </div>
      </div>

      <p class="about-entry__subtitle">{description}</p>

      <article class="about-entry__content prose">
        <Content />
      </article>
    </div>
  </section>
  <!-- Meet the rest of the team -->
  <section class="other-agents section">
    <div class="container">
      <h2 class="other-agents__heading">Meet the rest of the team</h2>
      <div class="other-agents__grid">
        {otherAgents.map((agent) => (
          <a href={`/team/${agent.slug}`} class="other-agent-card" style={`--agent-color: ${agent.data.color}`}>
            <img
              src={agent.data.avatar}
              alt={agent.data.name}
              class="other-agent-card__avatar"
              width="48"
              height="48"
            />
            <div class="other-agent-card__info">
              <span class="other-agent-card__name">{agent.data.name}</span>
              <span class="other-agent-card__codename">{agent.data.codename}</span>
            </div>
            <span class="other-agent-card__arrow">→</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-entry {
    padding-top: 2rem;
  }

  .about-entry__header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    max-width: 860px;
    margin-left: auto;
    margin-right: auto;
  }

  .about-entry__back {
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .about-entry__back:hover {
    color: var(--text-accent);
  }

  /* Agent Hero */
  .agent-hero {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    max-width: 860px;
    margin: 0 auto 2rem;
  }

  .agent-hero__avatar-wrap {
    flex-shrink: 0;
    position: relative;
  }

  .agent-hero__avatar-wrap::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 3px solid var(--agent-color);
    opacity: 0.4;
  }

  .agent-hero__avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--border-glass);
  }

  .agent-hero__meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .about-entry__title {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    margin-bottom: 0;
  }

  .agent-hero__role {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .agent-hero__model {
    font-size: 0.8rem;
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-tertiary);
  }

  .agent-hero__traits {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.5rem;
  }

  .agent-hero__trait {
    display: inline-flex;
    align-items: center;
    padding: 0.2rem 0.6rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    background: color-mix(in srgb, var(--trait-color) 15%, transparent);
    color: var(--trait-color);
    border: 1px solid color-mix(in srgb, var(--trait-color) 30%, transparent);
  }

  .about-entry__subtitle {
    font-size: 0.95rem;
    color: var(--text-tertiary);
    margin-bottom: 2rem;
    max-width: 860px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  /* Prose — identical to about pages */
  .about-entry__content {
    max-width: 860px;
    margin: 0 auto;
  }

  .about-entry__content :global(h2) {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .about-entry__content :global(h2:first-child) {
    margin-top: 0;
  }

  .about-entry__content :global(h3) {
    font-size: 1.15rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .about-entry__content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .about-entry__content :global(ul),
  .about-entry__content :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
    list-style: disc;
  }

  .about-entry__content :global(ol) {
    list-style: decimal;
  }

  .about-entry__content :global(li) {
    margin-bottom: 0.4rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .about-entry__content :global(li strong) {
    color: var(--text-primary);
  }

  .about-entry__content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85em;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    background: var(--bg-glass);
    border: 1px solid var(--border-subtle);
    color: var(--text-accent);
  }

  .about-entry__content :global(a) {
    color: var(--text-accent);
    border-bottom: 1px solid var(--border-accent);
    transition: opacity 0.2s ease;
  }

  .about-entry__content :global(a:hover) {
    opacity: 0.8;
  }

  .about-entry__content :global(blockquote) {
    border-left: 3px solid var(--text-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .about-entry__content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-subtle);
    margin: 2rem 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .agent-hero {
      flex-direction: column;
      align-items: flex-start;
    }

    .agent-hero__avatar {
      width: 72px;
      height: 72px;
    }
  }

  /* ─── Other agents nav ─── */
  .other-agents {
    padding-top: 0;
    padding-bottom: 4rem;
    border-top: 1px solid var(--border-subtle);
    margin-top: 3rem;
  }

  .other-agents__heading {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: 1.25rem;
    max-width: 860px;
    margin-left: auto;
    margin-right: auto;
    padding-top: 2.5rem;
  }

  .other-agents__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.75rem;
    max-width: 860px;
    margin: 0 auto;
  }

  .other-agent-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    background: var(--bg-glass);
    border: 1px solid var(--border-glass);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .other-agent-card:hover {
    border-color: var(--agent-color);
    background: color-mix(in srgb, var(--agent-color) 8%, var(--bg-glass));
    transform: translateY(-2px);
  }

  .other-agent-card__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 2px solid color-mix(in srgb, var(--agent-color) 40%, transparent);
  }

  .other-agent-card__info {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;
  }

  .other-agent-card__name {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .other-agent-card__codename {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .other-agent-card__arrow {
    font-size: 0.9rem;
    color: var(--text-tertiary);
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .other-agent-card:hover .other-agent-card__arrow {
    transform: translateX(4px);
    color: var(--agent-color);
  }

  @media (max-width: 600px) {
    .other-agents__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

</style>
